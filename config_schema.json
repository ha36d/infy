{
    "type": "object",
    "properties": {
        "metadata": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "org": { "type": "string" },
                "team": { "type": "string" },
                "env": { "type": "string" }
            },
            "required": ["name", "org"]
        },
        "cloud": {
            "type": "string",
            "enum": ["aws", "azure", "gcp", "oci"]
        },
        "account": { "type": "string" },
        "region": { "type": "string" },
        "components": {
            "type": "array",
            "items": {
                "type": "object",
                "patternProperties": {
                    "^[A-Za-z]+$": {
                        "type": "object",
                        "properties": {
                            "name": { "type": "string" },
                            "description": { "type": "string" },
                            "cidr": {
                                "type": "string",
                                "default": "10.0.0.0/24",
                                "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
                                "description": "CIDR range for the subnet"
                            }
                        },
                        "required": ["name"]
                    }
                },
                "minProperties": 1,
                "maxProperties": 1
            }
        },
        "network": {
            "type": "object",
            "description": "Network configuration for GCP",
            "properties": {
                "cidr": {
                    "type": "string",
                    "description": "CIDR range for the subnet (e.g., '10.0.0.0/24')",
                    "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$"
                },
                "ports": {
                    "type": "array",
                    "description": "List of ports with their protocols (format: 'protocol:port')",
                    "items": {
                        "type": "string",
                        "pattern": "^(tcp|udp):[0-9]{1,5}$",
                        "description": "Port specification in format 'protocol:port' (e.g., 'tcp:80', 'udp:53')"
                    }
                }
            },
            "required": ["cidr", "ports"],
            "additionalProperties": false,
            "examples": [{
                "cidr": "10.0.0.0/24",
                "ports": ["tcp:80", "tcp:443", "udp:53"]
            }]
        }
    },
    "required": ["metadata", "cloud", "account", "region", "components", "network"]
}
